<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubUsers" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/raisin_black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/aero</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/raisin_black</item>
        <item name="android:textColorSecondary">@color/davys_grey</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.AppsTitle">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.UsernameTitle">
        <item name="android:fontFamily">@font/lato_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Content">
        <item name="android:fontFamily">@font/lato_semibold</item>
    </style>

    <style name="Text.Content.Big">
        <item name="android:fontFamily">@font/lato_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Content.Small">
        <item name="android:fontFamily">@font/lato_semibold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text.SubContent">
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="Text.SubContent.Big">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.SubContent.Small">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="SearchView" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="fontFamily">@font/lato</item>
    </style>

</resources>